<div class="navbar-wagon">
  <div class="navbar-left">
    <!-- Logo -->
    <%= link_to root_path, class: "navbar-wagon-brand" do %>
      <%= image_tag "icons/logo.svg", class: "logo"%>
    <% end %>
     <!-- App Name -->
    <h1 class="brand-name"> DailyVery</h1>

  </div>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">
    <!-- Different navigation if login or not -->
    <% if user_signed_in? %>
      <%= link_to t(".sign_in", default: "Coursier"), rider_requests_path, class: "navbar-wagon-item navbar-wagon-link rider-link" %>
      <%= link_to t(".sign_up", default: "Client"), customer_requests_path, class: "navbar-wagon-item navbar-wagon-link client-link" %>
     <%= link_to destroy_user_session_path, class: "navbar-wagon-item navbar-wagon-link", method: :delete do %>
        <%= t(".sign_out", default: "Déconnexion") %>
      <% end %>
      <!-- Notification -->
      <%= link_to "#", class: "navbar-wagon-item navbar-wagon-link" do %>
      <% end %>

    <% else %>
      <!-- Login text link -->
      <%= link_to t(".sign_in", default: "Inscription"), new_user_registration_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to t(".sign_up", default: "Connexion"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <% end %>
    <!-- Button (call-to-action) -->
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <% if user_signed_in? %>
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li>
          <%= link_to t(".sign_in", default: "Rider"), rider_requests_path, class: "navbar-wagon-item navbar-wagon-link rider-link" %>
        </li>
        <li>
          <%= link_to t(".sign_up", default: "Client"), customer_requests_path, class: "navbar-wagon-item navbar-wagon-link client-link" %>
        </li>
        <li>
        <%= link_to destroy_user_session_path, class: "navbar-wagon-item navbar-wagon-link", method: :delete do %>
            <%= t(".sign_out", default: "Déconnexion") %>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
  <% else %>
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li>
          <%= link_to t(".sign_up", default: "Inscription"), new_user_registration_path, class: "navbar-wagon-item navbar-wagon-link" %>
        </li>
        <li>
         <%= link_to t(".sign_in", default: "Connexion"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
        </li>
      </ul>
    </div>
  </div>
  <% end %>


</div>

