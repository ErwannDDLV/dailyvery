  <div class="login-wrapper">
  <h2 class="small-header">Inscription</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs login-input">
      <%= f.input :email, required: true, autofocus: true, label: 'Adresse email' %>
      <%= f.input :password, required: true, label: 'Mot de passe', hint: ("#{@minimum_password_length} caractÃ¨res minimum" if @minimum_password_length) %>
      <%= f.input :password_confirmation, required: true, label: 'Confirmation mot de passe' %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "S'inscrire" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
